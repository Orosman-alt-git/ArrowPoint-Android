<resources>

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="Widget">
	</style>

	<style name="Widget.ProgressBar">
		<item name="android:indeterminateOnly">true</item>
		<item name="android:indeterminateBehavior">repeat</item>
		<item name="android:indeterminateDuration">3500</item>
		<item name="android:minWidth">48dip</item>
		<item name="android:maxWidth">48dip</item>
		<item name="android:minHeight">48dip</item>
		<item name="android:maxHeight">48dip</item>
	</style>

	<style name="Widget.ProgressBar.Vertical">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/progress_bar_vertical</item>
		<item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
		<item name="android:minWidth">1dip</item>
		<item name="android:maxWidth">12dip</item>
	</style>


	<!-- Custom Style defined for the buttons. -->
	<style name="CustomButtonOffStyle">
		<item name="android:textColor">#494948</item>
		<item name="android:shadowColor" >#000000</item>
	</style>

	<style name="CustomButtonOnStyle">
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:shadowColor" >#000000</item>
	</style>

	<style name = "Widget.AppCompat.Base.Spinner.spinner_style" >
		<item name="android:background">@drawable/draw_spinner</item>
        <item name="android:textAppearance">@style/TextAppearanceSpinnerItem</item>
		<item name="android:popupBackground">#ffffffff</item>
	</style>

    <style name="TextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="WhiteTheme">
        <item name="background_color">#ffffffff</item >
        <item  name="frame_border_color">#000000</item >
        <item  name="frame_primary_color">#ffffffff</item >
        <item  name="frame_secondary_color">#ffffffff</item >
        <item  name="table_color">#ffffffff</item >
        <item  name="text_color">#000000</item >
        <item  name="driver_message_color">#FF0000</item >
    </style>

    <style name="DarkTheme">
        <item  name="background_color">#ff141414</item >
        <item  name="frame_border_color">#D3D3D3</item >
        <item  name="frame_primary_color">#000000</item >
        <item  name="frame_secondary_color">#808080</item >
        <item  name="table_color">#ff141414</item >
        <item  name="text_color">#ffffffff</item >
        <item  name="driver_message_color">#FF0000</item >
    </style>




</resources>

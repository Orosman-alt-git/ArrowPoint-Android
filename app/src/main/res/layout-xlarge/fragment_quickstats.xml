<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/DashboardTableMaster"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        tools:context="com.example.arrowpoint.ArrowPoint$PlaceholderFragment"
    android:rowCount="1"
    android:columnCount="1"
    android:background="@android:color/background_dark">


    <LinearLayout
        android:orientation="vertical"
    android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
  
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:id="@+id/quickStatsTable"
            android:background="@color/ap_table">
            
	        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Quick Stats"
                android:id="@+id/driverQuickStatsLabel"
                android:layout_gravity="center"
                android:textColor="@color/ap_text" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/quickStatsColumns">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/quickStatsColumn1"
                    android:padding="10dp"
                    android:focusableInTouchMode="true"
                    android:background="@color/ap_column">

                    <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                        android:background="@drawable/frame_bg"
                        android:id="@+id/currentDriveModeFrame"
                        android:paddingBottom="10dp"
                        android:layout_margin="5dp">

	        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Drive Mode"
                            android:id="@+id/textView3"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>

                    <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                        android:id="@+id/setCruisePointFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_margin="5dp">
	        
	        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set Cruise Point"
                            android:id="@+id/textView4"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/quickStatsColumn2"
                    android:padding="10dp"
                    android:background="@color/ap_column">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/currentSpeedFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Speed"
                            android:id="@+id/textView5"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0"
                            android:id="@+id/currentSpeedValue"
                            android:layout_gravity="center"
                            android:textColor="@color/ap_text"
                            android:textSize="@dimen/ap_value_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="km/h"
                            android:id="@+id/currentSpeedMeasurement"
                            android:layout_gravity="right|center_vertical"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/currentCruiseFrame"
                        android:layout_weight="1"
                        android:background="@drawable/frame_bg"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Set Point"
                            android:id="@+id/textView6"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/quickStatsColumn3"
                    android:padding="10dp"
                    android:background="@color/ap_column">

                    <FrameLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
                        android:id="@+id/powerDrawFrame"
                        android:background="@drawable/frame_bg"
	            android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
	        
    		<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Power Draw"
                            android:id="@+id/textView7"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>

                    <FrameLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
                        android:id="@+id/netPowerPositionFrame"
	           android:layout_weight="1"
                        android:background="@drawable/frame_bg"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
	        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Power Position"
                            android:id="@+id/textView8"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>
    		
                <LinearLayout
                    android:orientation="vertical"
	    			android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/quickStatsColumn4"
                    android:padding="10dp"
                    android:background="@color/ap_column">
	    			    	    
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/batteryPercentageFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
		    	    	    	    	    
						    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Battery ProgressBar"
                            android:id="@+id/textView10"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/lowestCellVoltageFrame"
                        android:layout_weight="2"
                        android:background="@drawable/frame_bg"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
    		
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lowest Cell V"
                            android:id="@+id/textView9"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
    		
        </LinearLayout>
    		
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/solarPowerTable"
            android:background="@color/ap_table"
            android:layout_weight="2"
            android:layout_marginTop="15dp">
	 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Solar Power"
                android:id="@+id/solarPowerLabel"
                android:layout_gravity="center"
                android:textColor="@color/ap_text"
                android:background="@color/ap_table" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/solarPowerColumns">
        
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/solarPowerColumn1"
                    android:padding="10dp"
                    android:background="@color/ap_column">
        
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/totalPowerFromArrayFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >

            <TextView
                            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                            android:text="Total Power from Array"
                            android:id="@+id/textView11"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/solarPowerColumn2"
                    android:padding="10dp"
                    android:background="@color/ap_column">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/array1PowerFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Array 1"
                            android:id="@+id/textView12"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
        
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/solarPowerColumn3"
                    android:padding="10dp"
                    android:background="@color/ap_column">

                    <FrameLayout android:id="@+id/array2PowerFrame"
			    android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Array 2"
                            android:id="@+id/textView13"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>

                </LinearLayout>
		    		    
                <LinearLayout android:id="@+id/solarPowerColumn4"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@color/ap_column">
		
                    <FrameLayout android:id="@+id/array3PowerFrame"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
		
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Array 3"
                            android:id="@+id/textView14"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
		
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
         
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/temperatureTable"
            android:background="@color/ap_table"
            android:layout_weight="2"
            android:layout_marginTop="15dp">

            <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Temperature"
                android:id="@+id/temperatureLabel"
    android:layout_gravity="center"
                android:textColor="@color/ap_text"
                android:background="@color/ap_table" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/temperatureColumns">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/temperatureColumn1"
                    android:padding="10dp"
                    android:background="@color/ap_column" >
    
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/batteryHighestTempFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                            android:text="Battery Highest Temp"
                            android:id="@+id/textView15"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>
		
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/temperatureColumn2"
                    android:padding="10dp"
                    android:background="@color/ap_column" >
		
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/arrayTempFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
       	   
                        <TextView
	    			android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Array Temp"
                            android:id="@+id/textView"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/temperatureColumn3"
                    android:padding="10dp"
                    android:background="@color/ap_column" >
	    			    	    
                    <FrameLayout
                        android:id="@+id/motorTempFrame"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
		    	    	    	    	    
				    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Motor Temp"
                            android:id="@+id/textView2"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/temperatureColumn4"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@color/ap_column">

                    <FrameLayout
                        android:id="@+id/blankFrame"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
       	    			
        </LinearLayout>
			
        <LinearLayout
            android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
            android:id="@+id/otherTable"
            android:background="@color/ap_table"
            android:layout_weight="2"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
    	    	    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Other"
                android:id="@+id/otherLabel"
                android:layout_gravity="center"
                android:textColor="@color/ap_text" />
    	
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/otherColumns">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:id="@+id/otherColumn1"
                    android:padding="10dp"
                    android:background="@color/ap_column" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/tyrePressureFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >
	
                        <TextView
                            android:layout_width="wrap_content"
	    		    android:layout_height="wrap_content"
                            android:text="Tyre Pressure"
                            android:id="@+id/tyrePressureLabel"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>
       	    	    
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/otherColumn2"
                    android:padding="10dp"
                    android:background="@color/ap_column" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/driverMessagesFrame"
                        android:background="@drawable/frame_bg"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Messages to Driver"
                            android:id="@+id/driverMessagesLabel"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/ap_text" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</GridLayout>

    

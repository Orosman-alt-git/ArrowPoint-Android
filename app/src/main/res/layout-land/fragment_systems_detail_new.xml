<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.example.arrowpoint.ArrowPoint$PlaceholderFragment"
		>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_color">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_bg"
            android:layout_margin="@dimen/margin_medium"
            android:padding="@dimen/margin_medium">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/lblState"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/idle"
                    android:textSize="@dimen/text_size_system_details"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/lblRegen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/regen"
                    android:textSize="@dimen/text_size_system_details"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_color" />


                <TextView
                    android:id="@+id/lblBrakes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/brakes"
                    android:textSize="@dimen/text_size_system_details"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/lblHorn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/horn"
                    android:textSize="@dimen/text_size_system_details"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_color" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/frame_bg"
            android:padding="@dimen/margin_medium">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/lblMinBattery"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/minCellV"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="0.5"
                        android:textColor="@color/text_color"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/txtMinBattery"
                        android:text="@string/zero"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/lblMotorTempDetail"
                        android:text="@string/motorTemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="0.5"
                        android:textColor="@color/text_color"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/txtMotorTempDetail"
                        android:text="@string/zero"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/lblMaxBattery"
                        android:text="@string/maxCellV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="0.5"
                        android:textColor="@color/text_color"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/txtMaxBattery"
                        android:text="@string/zero"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/lblControllerTemp"
                        android:text="@string/controllerTemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="0.5"
                        android:textColor="@color/text_color"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/txtControllerTemp"
                        android:text="@string/zero"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/lbl12Volt"
                        android:text="@string/twelveVolt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="0.5"
                        android:textColor="@color/text_color"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/txt12VoltDetail"
                        android:text="@string/zero"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/lblMaxBatteryTemp"
                        android:text="@string/maxBatteryTemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="0.5"
                        android:textColor="@color/text_color"
                        android:gravity="right"
                        />

                    <TextView
                        android:id="@+id/txtMaxBatteryTemp"
                        android:text="@string/zero"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_system_details"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/frame_bg"
            android:padding="@dimen/margin_medium">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alertHeader"
                    android:id="@+id/lblAlerts"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_system_details"
                    android:gravity="center_horizontal"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/message"
                    android:id="@+id/txtAlerts"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/IntegralRed_color" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</GridLayout>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GraphTableMaster"
    tools:context="com.example.arrowpoint.ArrowPoint$PlaceholderFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_color">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:layout_margin="@dimen/margin_medium">

                <com.androidplot.xy.XYPlot
                    android:id="@+id/graph1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    androidPlot.titleWidget.labelPaint.textSize="@dimen/text_size_small"
                    androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
                    androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
                    androidPlot.graphWidget.marginTop="10dp"
                    androidPlot.graphWidget.marginLeft="10dp"
                    androidPlot.graphWidget.marginBottom="0dp"
                    androidPlot.graphWidget.marginRight="25dp"
                    androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
                    androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
                    androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
                    androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:layout_margin="@dimen/margin_medium">

                <com.androidplot.xy.XYPlot
                    android:id="@+id/graph2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    androidPlot.titleWidget.labelPaint.textSize="@dimen/text_size_small"
                    androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
                    androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
                    androidPlot.graphWidget.marginTop="10dp"
                    androidPlot.graphWidget.marginLeft="10dp"
                    androidPlot.graphWidget.marginBottom="0dp"
                    androidPlot.graphWidget.marginRight="25dp"
                    androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
                    androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
                    androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
                    androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">

            <TextView android:text="Primary Data"
                android:layout_gravity="center_horizontal"
                android:id="@+id/lblPrimary"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView android:text="Secondary Data"
                android:layout_gravity="center_horizontal"
                android:id="@+id/lblSecondary"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">

            <Spinner
                android:id="@+id/spnPrimary"
                android:spinnerMode="dropdown"
                android:entries="@array/Prime_Options"
                android:prompt="@string/Spinner_Prime_Prompt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/text_size_medium"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_medium"
                style="@style/CustomSpinnerStyle" />

            <Spinner
                android:id="@+id/spnSecondary"
                style = "@style/CustomSpinnerStyle"

                android:entries="@array/Prime_Options"
                android:prompt="@string/Spinner_Sec_Prompt"
                android:spinnerMode="dropdown"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/text_size_medium"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/margin_medium" />
        </LinearLayout>

    </LinearLayout>


</GridLayout>



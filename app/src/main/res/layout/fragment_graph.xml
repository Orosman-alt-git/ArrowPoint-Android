<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GraphTableMaster"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.arrowpoint.ArrowPoint$PlaceholderFragment"
    >


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/checkBoxLayout"
                android:layout_weight="2">

                <CheckBox
                    android:id="@+id/chkSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chk_Speed" />

                <CheckBox
                    android:id="@+id/chkBusPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chk_BusPower"  />

                <CheckBox
                    android:id="@+id/chkArrayPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chk_ArrayPower" />

                <CheckBox
                    android:id="@+id/chkMotorPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chk_MotorPower" />

                <CheckBox
                    android:id="@+id/chkMotorTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chk_MotorTemp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginBottom="15dp">

                <com.jjoe64.graphview.GraphView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/graph"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="15dp"
                    android:paddingLeft="30dp" />
            </FrameLayout>

        </LinearLayout>


</RelativeLayout>


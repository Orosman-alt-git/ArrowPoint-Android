<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GraphTableMaster"
    tools:context="com.example.arrowpoint.ArrowPoint$PlaceholderFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_weight="3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*">

        <TableRow
            android:layout_weight="0.1"
            android:id="@+id/tableRow1"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView android:text="Vehicle Componentry"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/heading"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_span="2" />
        </TableRow>


        <TableRow
            android:layout_weight="0.02"
            android:id="@+id/tableRow2"
            android:orientation="vertical">

            <TextView android:text="Primary Data"
                android:layout_gravity="center_horizontal"
                android:id="@+id/text1"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                android:clickable="false"/>

            <TextView android:text="Secondary Data"
                android:layout_gravity="center_horizontal"
                android:id="@+id/text2"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                android:clickable="false"/>
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="0.05"
            android:id="@+id/tableRow4"
            android:orientation="vertical">

            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tableRow5"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/primarySpinner"
                    style = "@style/Widget.AppCompat.Base.Spinner.spinner_style"
                    android:spinnerMode="dialog"
                    android:entries="@array/Prime_Options"
                    android:prompt="@string/Spinner_Prime_Prompt"/>
            </TableRow>
            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tableRow6"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/secondarySpinner"
                    style = "@style/Widget.AppCompat.Base.Spinner.spinner_style"

                    android:entries="@array/Sec_Options"
                    android:prompt="@string/Spinner_Sec_Prompt"
                    android:spinnerMode="dialog"/>

            </TableRow>

        </TableRow>


        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="0.3"
            android:id="@+id/tableRow7"
            android:orientation="vertical">
        </TableRow>



    </TableLayout>


    <TableLayout
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0">

        <TableRow
            android:layout_weight="1"
            android:id="@+id/tableRow8"
            android:orientation="vertical"
            >

            <com.jjoe64.graphview.GraphView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/graph"
                android:paddingRight="30dp"
                />
        </TableRow>

    </TableLayout>



</LinearLayout>






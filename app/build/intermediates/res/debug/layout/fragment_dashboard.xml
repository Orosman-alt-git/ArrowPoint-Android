<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DashboardTableMaster"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    tools:context="com.example.arrowpoint.ArrowPoint$PlaceholderFragment"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/DashboardTable"
        android:layout_width="fill_parent"
        android:layout_height="207dp"

        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginTop="16sp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/powerWrapper"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Power"
                    android:text="@string/power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    />

                <TextView
                    android:id="@+id/kw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kw"
                    android:textSize="20sp"
                    android:gravity="right"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/speedWrapper"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Speed"
                    android:text="@string/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    />

                <TextView
                    android:id="@+id/Kph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kph"
                    android:textSize="20sp"
                    android:gravity="right"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/powerProgressWrapper"
            android:layout_width="170dp"
            android:layout_height="170sp"
            android:gravity="right"
            android:layout_gravity="right">

            <ProgressBar
                android:id="@+id/pbSetpoint"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:gravity="right"
                android:progress="60"	/>

            <TextView
                android:id="@+id/pbSetpointText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center"
                android:text="@string/percent"
                android:textColor="@android:color/black"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/lblState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/idle"
        android:textSize="30sp" />
    <TableLayout
        android:id="@+id/DashboardTable3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10sp"
        android:stretchColumns="0,1,2,3" >

        <TableRow android:paddingTop="5sp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
                        android:id="@+id/lblMinCellV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20sp"
                        android:text="@string/minCellV"
                        android:layout_gravity="right"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
                        android:id="@+id/txtMinCellV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="50sp"
                        android:layout_column="2"
                        android:gravity="center"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:gravity="start|right"
                    android:layout_weight="1">

                    <au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
                        android:id="@+id/lblMotorTemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/motorTemp"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
                        android:id="@+id/txtMotorTemp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="50sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>


        </TableRow>



    </TableLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/Battery"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="50dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_red"
            android:max="100"
            android:progress="50"
            android:visibility="visible" />

        <TextView
            android:id="@+id/BatteryText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/Battery"
            android:layout_alignLeft="@id/Battery"
            android:layout_alignTop="@id/Battery"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:text="@string/percent"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
            android:id="@+id/txtLastLockedSOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lastLockedSOC"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:paddingTop="50dp"
            />
    </RelativeLayout>


</TableLayout>

    

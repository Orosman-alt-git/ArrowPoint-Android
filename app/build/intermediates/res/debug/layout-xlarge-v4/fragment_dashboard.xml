<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/DashboardTableMaster"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        tools:context="com.example.arrowpoint.ArrowPoint$PlaceholderFragment"
		>

<TableLayout
    android:id="@+id/DashboardTable"
    android:layout_width="fill_parent"
    android:layout_height="207dp"
    android:layout_gravity="bottom"
    android:layout_marginLeft="16sp"
    android:layout_marginRight="16sp"
    android:layout_marginTop="16sp"
    android:stretchColumns="0,1,2,3,4" >
  
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            
	        <TextView
                android:id="@+id/Speed"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|bottom"
                android:layout_gravity="fill_vertical"
                android:text="@string/power"
                android:layout_column="0"
                android:textSize="100sp"
                android:layout_weight="1"
			/>

	        <TextView
	            android:id="@+id/Kph"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|bottom"
                android:layout_gravity="fill_vertical"
                android:text="@string/kph"
	            android:layout_column="1"
                android:textSize="50sp"
                android:layout_weight="1"
	            android:paddingLeft="6sp"
			/>	        
	        
	        <TextView
	            android:id="@+id/Power"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:gravity="right|bottom"	       
	            android:layout_gravity="fill_vertical"     
	            android:text="@string/power"	            
	            android:layout_column="2"
	            android:textSize="100sp"	            
	            android:layout_weight="1"
	             />
	        
    		<TextView
	            android:id="@+id/kw"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:gravity="left|bottom"
	            android:text="@string/kw"	            
	            android:layout_column="3"
	            android:textSize="50sp"
	            android:paddingLeft="6sp"	            
	           android:layout_weight="1"
	             />	        
	        
    		
			<RelativeLayout 
	    			android:layout_width="fill_parent"
	    			android:layout_height="170sp"
	    			android:layout_column="4"
	    			android:layout_weight="1">
	    			    	    
		    	           <ProgressBar
					            android:id="@+id/pbSetpoint"
					            style="@style/Widget.ProgressBar.Vertical"
					            android:layout_width="200sp"
					            android:layout_height="170sp"
					            android:max="100"
					            android:paddingLeft="40sp"
					            android:progress="60"	/>
		    	    	    	    	    
						    <TextView
						        android:id="@+id/pbSetpointText"
						        android:layout_width="match_parent"
						        android:layout_height="match_parent"
						        android:layout_alignBottom="@id/pbSetpoint"
						        android:layout_alignLeft="@id/pbSetpoint"
						        android:layout_alignRight="@+id/pbSetpoint"
						        android:layout_alignTop="@id/pbSetpoint"
						        android:layout_marginLeft="60sp"
						        android:background="#00000000"
						        android:gravity="center"
						        android:text="@string/percent"
						        android:textColor="@android:color/black"
						        android:textSize="40sp" />

			</RelativeLayout>       	        		
    		
    		
    		
	 
        
        </TableRow>
        
		<TableRow
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >

            <TextView
                android:id="@+id/lblState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                
                android:text="@string/idle"
                android:textSize="30sp"
                android:layout_column="4" />
        
         </TableRow>

		<TableRow
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingTop="10sp" >

			<Space
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"	 />
		    		    
		</TableRow>
		
		
		

         
</TableLayout>

<TableLayout
    android:id="@+id/DashboardTable3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10sp"
    android:stretchColumns="0,1,2,3" >
    
        	<TableRow android:paddingTop="5sp">

        		<au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
        		    android:id="@+id/lblMotorTemp"
        		    android:layout_width="match_parent"
        		    android:layout_height="wrap_content"
        		    android:layout_marginRight="10sp"
        		    android:layout_gravity="right"
        		    android:text="@string/motorTemp"
        		    android:layout_column="0"
        		    android:textSize="40sp" />
        	    
    	    	<au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
	    		    android:id="@+id/txtMotorTemp"
	    		    android:layout_width="match_parent"
	    		    android:layout_height="wrap_content"
	    		    android:text="@string/zero" 
	    		    android:textSize="40sp"
	    		    android:layout_column="0"
	    		    />

    	    	<au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
    	    	    android:id="@+id/lblMinCellV"
    	    	    android:layout_width="match_parent"
    	    	    android:layout_height="wrap_content"
    	    	    android:layout_marginRight="20sp"
    	    	    android:text="@string/minCellV"
    	    	    android:layout_gravity="right"
    	    	    android:textSize="40sp" />

				<au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
	    		    android:id="@+id/txtMinCellV"
	    		    android:layout_width="match_parent"
	    		    android:layout_height="wrap_content"
	    		    android:text="@string/zero" 
	    		    android:textSize="40sp"
	    		    android:layout_column="2"
	    		     />    	    	
    	    	    	    	
					    	
    	</TableRow>
        	
        	
    
</TableLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/Battery"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="50dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_red"
            android:max="100"
            android:progress="50"
            android:visibility="visible" />

        <TextView
            android:id="@+id/BatteryText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/Battery"
            android:layout_alignLeft="@id/Battery"
            android:layout_alignTop="@id/Battery"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:text="@string/percent"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <au.com.teamarrow.arrowpoint.utils.AutoResizeTextView
            android:id="@+id/txtLastLockedSOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lastLockedSOC"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:paddingTop="50dp"
            />
    </RelativeLayout>
